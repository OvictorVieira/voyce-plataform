<%= render 'dashboard/partials_shared/sidebar' %>

<div class="main-content">

  <%= render 'dashboard/partials_shared/navbar' %>

  <%= render partial: 'dashboard/partials_shared/header', locals: {
      description: 'Crie os planos e informe o que você vai oferecer aos seus Voycers.',
      title: 'Criação de Plano',
      css_class: 'col-lg-12 col-12'
  } %>

  <div class="container-fluid mt--8">

    <div class="row">
      <div class="col-xl-8 order-xl-1">
        <div class="card">
          <div class="card-header">
            <div class="row align-items-center text-uppercase">
              <div class="col-8">
                <h3 class="mb-0">
                  <%= I18n.t('dashboard.proposals.titles.proposals_create') %>
                </h3>
              </div>
              <div class="col-4 text-right">
                <a href="<%= dashboard_proposals_path %>" class="btn btn-link text-warning text-right">
                  <%= I18n.t('dashboard.proposals.buttons.back') %>
                </a>
              </div>
            </div>
          </div>
          <div class="card-body">

            <%= form_tag dashboard_create_proposals_url, :id => 'form-action' do %>

              <h6 class="heading-small text-muted mb-4">
                <%= I18n.t('dashboard.proposals.fields.proposals_informations') %>
              </h6>
              <div class="row pl-lg-2 pr-lg-2">
                <div class="col-12">
                  <div class="form-group d-flex flex-row mb-2">
                    <label class="w-25 mr-3">
                      <h4 class="h4 font-weight-600 mb-1">
                        <%= I18n.t('dashboard.proposals.fields.proposal_name') %>
                      </h4>
                      <h4 class="h6 font-weight-300">
                        <%= I18n.t('dashboard.proposals.fields.required') %>
                      </h4>
                    </label>
                    <div class="input-group mb-4">
                      <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="far fa-file-alt"></i>
                        </span>
                      </div>
                      <input class="form-control"
                             name="proposal_name"
                             id="proposal-name"
                             placeholder="(Ex.: Plano Silver)"
                             type="text" required>
                    </div>
                  </div>
                </div>
                <div class="col-12">
                  <div class="form-group d-flex flex-row mb-2">
                    <label class="w-25 mr-3">
                      <div class="h4 font-weight-600 mb-1">
                        <%= I18n.t('dashboard.proposals.fields.price') %>
                      </div>
                      <div class="h6 font-weight-300">
                        <%= I18n.t('dashboard.proposals.fields.required') %>
                      </div>
                    </label>
                    <div class="input-group mb-4">
                      <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-money-bill-wave"></i>
                        </span>
                      </div>
                      <input class="form-control money2"
                             name="price"
                             id="price"
                             placeholder="5,00"
                             type="text" required>
                    </div>
                  </div>
                </div>

                <div class="col-12">
                  <div class="form-group d-flex flex-row mb-2">
                    <label class="w-25 mr-3">
                      <h4 class="h4 font-weight-600 mb-1">
                        <%= I18n.t('dashboard.proposals.fields.description') %>
                      </h4>
                      <h4 class="h6 font-weight-300">
                        <%= I18n.t('dashboard.proposals.fields.required') %>
                      </h4>
                    </label>
                    <div class="input-group mb-4">
                      <textarea class="form-control form-control-alternative"
                                name="description"
                                id="description"
                                rows="4"
                                cols="80"
                                placeholder="Escreva aqui a descrição do seu plano..."></textarea>
                    </div>
                  </div>
                </div>

                <div class="col-12 text-right">
                  <button type="submit" class="btn btn-success w-25" id="button-action">
                    <%= I18n.t('dashboard.proposals.buttons.create_proposal') %>
                  </button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-xl-4 order-xl-1">
        <div class="card shadow shadow-lg--hover mt-6">
          <div class="card-body">
            <div class="d-flex">
              <div class="pl-2">
                <h2 class="title text-success">
                  <%= I18n.t('dashboard.proposals.titles.tip') %>&nbsp;<i class="fas fa-check"></i>
                </h2>
                <p>
                  <%= I18n.t('dashboard.proposals.fields.tip') %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%= render 'dashboard/partials_shared/footer' %>

  </div>

</div>

<%= javascript_pack_tag 'additionals/proposals' %>