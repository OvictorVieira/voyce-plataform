<div class="header pb-8 pt-7 d-flex align-items-center" style="min-height: 80vh; background-image: url('<%= asset_path select_background_header %>'); background-size: cover; background-position: center top;">
  <!-- Mask -->
  <span class="mask bg-gradient-default opacity-8"></span>
  <!-- Header container -->
  <div class="container-fluid d-flex align-items-center">
    <div class="row">
      <div class="<%= @css_class if @css_class.present? %>">
        <h1 class="display-2 text-white"><%= @title if @title.present? %></h1>
        <% if @description.present? %>
          <p class="text-white mt-0 mb-5">
            <%= @description %>
          </p>
        <% end %>
        <%= render 'layouts/messages' %>
      </div>
    </div>
  </div>
</div>