<%= render 'dashboard/partials_shared/sidebar' %>

<div class="main-content">

  <%= render 'dashboard/partials_shared/navbar' %>

  <%= render partial: 'dashboard/partials_shared/header', locals: {
      description: 'Aqui você pode visualizar e editar suas músicas.',
      title: 'Gerencie suas músicas',
      css_class: 'col-lg-12 col-12'
  } %>

  <div class="container-fluid">

    <div class="row">
      <div class="col">
        <div class="card shadow">
          <div class="card-header border-0">
            <div class="row align-items-center">
              <div class="col-8 text-uppercase">
                <h3 class="mb-0">
                  <%= I18n.t('dashboard.musics.titles.musics') %>
                </h3>
              </div>
              <div class="col-4 text-right">
                <a href="<%= dashboard_new_music_path %>" class="btn btn-1 btn-outline-success">
                  <%= I18n.t('dashboard.musics.buttons.upload_music') %>
                </a>
              </div>
            </div>
          </div>

          <table class="table align-items-center table-flush">
            <thead class="thead-light">
              <tr>
                <th scope="col" class="pl-6" style="width: 30vw;"><%= I18n.t('dashboard.musics.fields.music_name') %></th>
                <th scope="col" style="width: 5vw;"><%= I18n.t('dashboard.musics.fields.status') %></th>
                <th scope="col" class="text-left" style="width: 60vw;"><%= I18n.t('dashboard.musics.fields.message') %></th>
                <th scope="col" style="width: 5vw;"></th>
              </tr>
            </thead>
            <% if @singles.present? && @singles.first.present? %>
              <%= render partial: 'dashboard/home/singles', locals: { singles: @singles } %>
            <% else %>
              <tbody>
              <tr>
                <th scope="row">
                  <div class="media align-items-center mt-3">
                    <div class="media-body">
                        <span class="mb-0 text-sm">
                          <%= I18n.t('dashboard.musics.fields.no_music') %>
                        </span>
                    </div>
                  </div>
                </th>
              </tr>
              </tbody>
            <% end %>
          </table>

          <!-- Pagination -->
          <div class="card-footer py-4">
            <nav class="d-flex justify-content-end" aria-label="...">

            </nav>
          </div>
        </div>
      </div>
    </div>

    <%= render 'dashboard/partials_shared/footer' %>

  </div>

</div>