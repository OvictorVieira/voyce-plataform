<%= render 'dashboard/partials_shared/sidebar' %>

<div class="main-content">

  <%= render 'dashboard/partials_shared/navbar' %>

  <%= render partial: 'dashboard/partials_shared/header', locals: {
      description: 'Aqui você poderá editar a sua meta, ela será exibida no seu perfil do Voyce.',
      title: 'Meta do Usuário',
      css_class: 'col-lg-8 col-8'
  } %>

  <div class="d-flex">
    <div class="col-xl-8 order-xl-1">
      <div class="card">
        <div class="card-header">
          <div class="row align-items-center text-uppercase">
            <div class="col-8">
              <h3 class="mb-0">
                <%= I18n.t('dashboard.goals.title.edit_goal') %>
              </h3>
            </div>
            <div class="col-4 text-right">
              <a href="<%= dashboard_goals_url %>" class="btn btn-link text-warning text-right">
                <%= I18n.t('dashboard.musics.buttons.back') %>
              </a>
            </div>
          </div>
        </div>
        <div class="card-body">
          <h6 class="heading-small text-muted mb-4">
            <%= I18n.t('dashboard.goals.title.goals_informations') %>
          </h6>

          <%= form_tag dashboard_update_goal_path, :id => 'form-action' do %>

            <%= hidden_field_tag :goal_id, @goal.document_id %>

            <div class="row pl-lg-2 pr-lg-2">
              <div class="col-12">
                <div class="form-group d-flex flex-row mb-2">
                  <label class="w-25 mr-3">
                    <div class="h4 font-weight-600 mb-1">
                      <%= I18n.t('dashboard.proposals.fields.price') %>
                    </div>
                    <div class="h6 font-weight-300">
                      <%= I18n.t('dashboard.proposals.fields.required') %>
                    </div>
                  </label>
                  <div class="input-group mb-4">
                    <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="fas fa-money-bill-wave"></i>
                  </span>
                    </div>
                    <input class="form-control money2"
                           name="price"
                           id="price"
                           placeholder="1000,00"
                           value="<%= @goal.data[:price] %>"
                           type="number"
                           min="0.00"
                           max="10000.00"
                           step="0.01" required>
                  </div>
                </div>
              </div>

              <div class="col-12">
                <div class="form-group d-flex flex-row mb-2">
                  <label class="w-25 mr-3">
                    <h4 class="h4 font-weight-600 mb-1">
                      <%= I18n.t('dashboard.proposals.fields.description') %>
                    </h4>
                    <h4 class="h6 font-weight-300">
                      <%= I18n.t('dashboard.proposals.fields.required') %>
                    </h4>
                  </label>
                  <div class="input-group mb-4">
                      <textarea class="form-control form-control-alternative"
                                name="description"
                                id="description"
                                rows="4"
                                cols="80"
                                placeholder="Escreva aqui o que você planeja fazer com o dinheiro acumulado..."><%= @goal.data[:description] %></textarea>
                  </div>
                </div>
              </div>
              <div class="col-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-success w-25" id="button-action">
                  <%= I18n.t('dashboard.goals.buttons.save') %>
                </button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-xl-4 order-xl-1">
      <div class="card shadow shadow-lg--hover p-4">
        <%= image_tag('money-bag.svg', class: 'card-img-top') %>
      </div>
    </div>
  </div>

  <%= render 'dashboard/partials_shared/footer' %>

</div>